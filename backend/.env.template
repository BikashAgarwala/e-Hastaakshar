# ==========================================
# 1. DATABASE CONFIGURATION (PostgreSQL)
# ==========================================
# These must match the values in your docker-compose.yml
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_SERVER=localhost
POSTGRES_DB=ehastaakshar_db
POSTGRES_PORT=5432

# ==========================================
# 2. IPFS CONFIGURATION (Pinata)
# ==========================================
# Get these from https://app.pinata.cloud/keys
PINATA_API_KEY=your_pinata_api_key_here
PINATA_SECRET_KEY=your_pinata_secret_key_here

# ==========================================
# 3. SECURITY & APP SETTINGS
# ==========================================
# Secret key for hashing/JWT (Generate a random string: `openssl rand -hex 32`)
SECRET_KEY=change_this_to_a_secure_random_string
ACCESS_TOKEN_EXPIRE_MINUTES=30
PROJECT_NAME=e-Hastaakshar